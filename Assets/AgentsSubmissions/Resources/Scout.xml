<?xml version="1.0" encoding="UTF-8"?>
<Plan>


  <ActionPatterns>
    <ActionPattern name ="AP-ShootBack">
      <Action name ="LookAtDamage"></Action>
      <Action name ="ShootEnemiesInSight"></Action>
    </ActionPattern>      
    <ActionPattern name ="AP-ShootEnemiesInSight">
      <Action name ="ShootEnemiesInSight"></Action>
    </ActionPattern>
    <ActionPattern name ="AP-MoveAround">
      <Action name ="LookAround"></Action>
      <Action name ="MoveToNextNode"></Action>
    </ActionPattern>

    <ActionPattern name ="AP-GuardLocation">
      <Action name ="GuardPosition"></Action>
    </ActionPattern>

    <ActionPattern name ="AP-Return">
      <Action name ="ReturnToBase"></Action>
    </ActionPattern>
  </ActionPatterns>


  <CompetenceElements>
    <CompetenceElement name ="CE-Test" triggers ="AP-ShootBack">
      <Senses>
        <Sense name="UnderAttack" value ="1" comperator="bool"></Sense>
      </Senses>
    </CompetenceElement>
    <CompetenceElement name ="CE-Shoot" triggers ="AP-ShootEnemiesInSight">
      <Senses>
      </Senses>
    </CompetenceElement>
  </CompetenceElements>


  <Competences>
    <Competence name="C-Shoot">
      <Senses>
        <Sense name="AllTargetsAreDead" value ="1" comperator="bool"></Sense>
      </Senses>
      <CompetenceElements>
        <CompetenceElement name="CE-Shoot"></CompetenceElement>
      </CompetenceElements>
    </Competence>
  </Competences>


  <DriveElements>

    <DriveElement name="DE-InitialisationSetup" triggers ="RoundStartInitialisation" checkTime ="0">
      <Senses>
       <Sense name="InitialisationComplete" value ="0" comperator="bool"></Sense>
      </Senses>
    </DriveElement>

     <DriveElement name="DE-GuardPoint" triggers ="AP-GuardLocation" checkTime ="0">
      <Senses>
       <Sense name ="DoesPathExist" value ="0" comperator ="bool"></Sense>
       <Sense name="ScoutingPoint" value ="1" comperator="bool"></Sense>
      </Senses>
    </DriveElement>

    <DriveElement name="DE-MoveAround" triggers ="AP-MoveAround" checkTime ="0">
      <Senses>
        <Sense name ="DoesPathExist" value ="1" comperator ="bool"></Sense>
      </Senses>
    </DriveElement>





    <DriveElement name="DE-SetRightDefencePosition" triggers ="FindCourtyardDefencePosition" checkTime ="0">
      <Senses>
      </Senses>
    </DriveElement>


     <DriveElement name="DE-SetScoutPosition" triggers ="FindScoutPosition" checkTime ="0">
      <Senses>
       <Sense name ="DoesPathExist" value ="0" comperator ="bool"></Sense>
       <Sense name="ScoutingPoint" value ="0" comperator="bool"></Sense>
      </Senses>
    </DriveElement>

  </DriveElements>




  <Drives>

    <Drive name="D-Initialisation" priority="1">
      <Senses>
      <Sense name="InitialisationComplete" value ="0" comperator="bool"></Sense>
      </Senses>
      <DriveElements>
        <DriveElement name="DE-InitialisationSetup"></DriveElement>
      </DriveElements>
    </Drive>



    <Drive name="D-FowardScout" priority="1">
      <Senses>
      <Sense name="InitialisationComplete" value ="1" comperator="bool"></Sense>
      <Sense name="enemyRightSide" value ="0" comperator="bool"></Sense>
      <Sense name="enemyLeftSide" value ="0" comperator="bool"></Sense>
      <Sense name="SpottedEnemyPresence" value ="0" comperator ="bool"></Sense>
      <Sense name="UnderAttack" value ="0" comperator="bool"></Sense>
      </Senses>
      <DriveElements>
        <DriveElement name="DE-GuardPoint"></DriveElement>
        <DriveElement name="DE-MoveAround"></DriveElement>
        <DriveElement name="DE-SetScoutPosition"></DriveElement>
      </DriveElements>
    </Drive>

    <Drive name="D-DefendBase" priority="1">
      <Senses>
      <Sense name="InitialisationComplete" value ="1" comperator="bool"></Sense>
      <Sense name="enemyRightSide" value ="1" comperator="bool"></Sense>
      <Sense name="enemyLeftSide" value ="1" comperator="bool"></Sense>
      </Senses>
      <DriveElements>
        <DriveElement name="DE-GuardPoint"></DriveElement>
        <DriveElement name="DE-MoveAround"></DriveElement>
        <DriveElement name="DE-SetRightDefencePosition"></DriveElement>
      </DriveElements>
    </Drive>


    <Drive name="D-DefendLeft" priority="1">
      <Senses>
      <Sense name="InitialisationComplete" value ="1" comperator="bool"></Sense>
      <Sense name="enemyRightSide" value ="0" comperator="bool"></Sense>
      <Sense name="enemyLeftSide" value ="1" comperator="bool"></Sense>
      </Senses>
      <DriveElements>
        <DriveElement name="DE-GuardPoint"></DriveElement>
        <DriveElement name="DE-MoveAround"></DriveElement>
        <DriveElement name="DE-SetRightDefencePosition"></DriveElement>
      </DriveElements>
    </Drive>

    <Drive name="D-DefendRight" priority="1">
      <Senses>
      <Sense name="InitialisationComplete" value ="1" comperator="bool"></Sense>
      <Sense name="enemyRightSide" value ="1" comperator="bool"></Sense>
      <Sense name="enemyLeftSide" value ="0" comperator="bool"></Sense>
      </Senses>
      <DriveElements>
        <DriveElement name="DE-GuardPoint"></DriveElement>
        <DriveElement name="DE-MoveAround"></DriveElement>
        <DriveElement name="DE-SetRightDefencePosition"></DriveElement>
      </DriveElements>
    </Drive>



  </Drives>


</Plan>
